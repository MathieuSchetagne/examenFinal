<form id="recherche_formulaire" action="/rechercher" method="POST">
    <input name="prenom" type="text" placeholder=<%= __('prenom') %>>
    <input type="submit" value=<%= __('valider') %>>
</form>

<form id="mon_formulaire" action="/modifier" method="POST">
    <input name="_id" type="text" >
    <input name="nom" type="text" >
    <input name="prenom" type="text" >
    <input name="telephone" type="text" >
    <input name="courriel" type="text" >
    <input type="submit">
</form>

<table class="tableau" id="tableau">

        
                
                
            
    <% let noligne = 0 %>
        <% for(elm of adresses) { %>
            <% if (noligne==0) { %>
                <tr class="enteteTab">
                    <% noligne++ %>
                    <td class="id"><a href="/trier/_id/<%= ordre %>">id</a></td>
                    <td><a href="/trier/prenom/<%= ordre %>"><%= __('prenom') %></a></td>
                    <td><a href="/trier/nom/<%= ordre %>"><%= __('nom') %></a></td>
                    <td class="telephone"><a href="/trier/telephone/<%= ordre %>"><%= __('telephone') %></a></td>
                    <td class="courriel"><a href="/trier/courriel/<%= ordre %>"><%= __('courriel') %></a></td>
                </tr>

                <tr id="gabarit">
                    
                        <td class="_id" contenteditable="true"></td>
                    
                        <td class="prenom" contenteditable="true"></td>
                    
                        <td class="nom" contenteditable="true"></td>
                    
                        <td class="telephone" contenteditable="true"></td>
                    
                        <td class="courriel" contenteditable="true"></td>
                    
                    <td><a class="icon supprimer fa fa-trash"></a></td>
                    <td><a class="icon modifier fa fa-save"></a></td>
                    <td><a class="icon fa fa-user" href="/profil/5a999f7a018db817a031d3f1"></a></td>
                </tr>
            <% } %>

                    

                
                <tr>
                    <% for(info in elm) { %>
                        <td class="<%=info %>" contenteditable="true"><%= elm[info] %></td>
                    <% } %>
                    <td><a class="icon supprimer fa fa-trash"></a></td>
                    <td><a class="icon modifier fa fa-save"></a></td>
                    <td><a class="icon fa fa-user" href="/profil/<%= elm._id %>"></a></td>
                </tr>            
        <% } %>
</table>

