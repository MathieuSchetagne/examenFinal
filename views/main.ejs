<form id="mon_formulaire" action="/modifier" method="POST">
    <input name="_id" type="text" >
    <input name="nom" type="text" >
    <input name="prenom" type="text" >
    <input name="telephone" type="text" >
    <input name="courriel" type="text" >
    <input type="submit">
</form>

<table class="tableau">
    <% let noligne = 0 %>
        <% for(elm of adresses) { %>
            <% if (noligne==0) { %>
                <tr class="enteteTab">
                    <% noligne++ %>
                    <td class="id"><a href="/trier/_id/<%= ordre %>">id</a></td>
                    <td><a href="/trier/prenom/<%= ordre %>">PRENOM</a></td>
                    <td><a href="/trier/nom/<%= ordre %>">NOM</a></td>
                    <td class="telephone"><a href="/trier/telephone/<%= ordre %>">TELEPHONE</a></td>
                    <td class="courriel"><a href="/trier/courriel/<%= ordre %>">COURRIEL</a></td>
                </tr>
            <% } %>

                <tr>
                    <% for(info in elm) { %>
                        <td class="<%=info %>" contenteditable="true"><%= elm[info] %></td>
                    <% } %>
                    <td><a class="icon fa fa-trash" href="/detruire/<%= elm._id %>"></a></td>
                    <td><a class="icon modifier fa fa-save"></a></td>
                </tr>            
        <% } %>
</table>
